<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projectmanageclient.controller.AddController">
   <children>
      <Label text="Project Name:" />
      <TextField fx:id="nameInput" promptText="Enter project name" />

      <Label text="Description:" />
      <TextField fx:id="descriptionInput" promptText="Enter project description" />

      <Label text="Date Started:" />
      <DatePicker fx:id="dateStartedPicker" />

      <Label text="Date Ended:" />
      <DatePicker fx:id="dateEndedPicker" />

      <Label text="Priority:" />
      <ChoiceBox fx:id="priorityChoiceBox">
            <String fx:value="High" />
            <String fx:value="Medium" />
            <String fx:value="Low" />
      </ChoiceBox>

      <HBox>
         <Button text="Submit" onAction="#onSubmitButtonClick" />
      </HBox>
   </children>
</VBox>
